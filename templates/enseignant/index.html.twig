{% extends 'base.html.twig' %}

{% block title %}Enseignant index{% endblock %}

{% block body %}
{% include('./navbar/index.html.twig') %}
    <h1>Enseignant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.matricule }}</td>
                <td>{{ enseignant.nom }}</td>
                <td>{{ enseignant.prenom }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_enseignant_show', {'id': enseignant.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_enseignant_edit', {'id': enseignant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-success" href="{{ path('app_enseignant_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
   {% include('./navbar/index.html.twig') %}

    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nce</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Num Soutenance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nce }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td><a href="/soutenance/{{ etudiant.soutenance.id }}" style="color:blue"> {{ etudiant.soutenance.id }}</a></td>
                <td>
                    <a  class="btn btn-info" href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">Afficher</a>
                    <a  class="btn btn-warning" href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-success" href="{{ path('app_etudiant_new') }}">Créer nouveau</a>
{% endblock %}
